# ================================
# PRODUCTION ENVIRONMENT VARIABLES
# Meet2Rent Platform
# ================================

# ================================
# DATABASE (Production)
# ================================
DATABASE_URL="postgresql://username:password@prod-db-host:5432/meet2rent"
DATABASE_POOL_SIZE=50

# ================================
# NEXTAUTH CONFIGURATION
# ================================
NEXTAUTH_URL="https://meet2rent.com"
NEXTAUTH_SECRET="production-super-secret-key-min-32-chars-very-secure"

# ================================
# GOOGLE OAUTH (Production)
# ================================
GOOGLE_CLIENT_ID="prod-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="prod-google-client-secret"

# ================================
# STRIPE PAYMENTS (Production)
# ================================
STRIPE_SECRET_KEY="sk_live_your-production-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="pk_live_your-production-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="whsec_your-production-webhook-secret"

# ================================
# CLOUDINARY (Production)
# ================================
CLOUDINARY_CLOUD_NAME="meet2rent-prod"
CLOUDINARY_API_KEY="prod-cloudinary-api-key"
CLOUDINARY_API_SECRET="prod-cloudinary-api-secret"

# ================================
# EMAIL SERVICE (Production)
# ================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="noreply@meet2rent.com"
SMTP_PASSWORD="production-app-password"

# ================================
# GOOGLE MAPS (Production)
# ================================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="production-google-maps-api-key"

# ================================
# ANALYTICS (Production)
# ================================
NEXT_PUBLIC_GA_TRACKING_ID="G-PROD-TRACKING-ID"

# ================================
# SENTRY (Production Monitoring)
# ================================
SENTRY_DSN="https://production-sentry-dsn@sentry.io/project-id"
SENTRY_ORG="meet2rent"
SENTRY_PROJECT="meet2rent-production"

# ================================
# RATE LIMITING (Production Redis)
# ================================
UPSTASH_REDIS_REST_URL="https://production-redis-url.upstash.io"
UPSTASH_REDIS_REST_TOKEN="production-redis-token"

# ================================
# ENVIRONMENT
# ================================
NODE_ENV="production"
VERCEL_ENV="production"

# ================================
# SECURITY & PERFORMANCE
# ================================
NEXT_PUBLIC_CDN_URL="https://cdn.meet2rent.com"
ALLOWED_ORIGINS="https://meet2rent.com,https://www.meet2rent.com"
CORS_ORIGIN="https://meet2rent.com"

# ================================
# FEATURE FLAGS (Production)
# ================================
ENABLE_MESSAGING=true
ENABLE_REVIEWS=true
ENABLE_CONTRACTS=true
ENABLE_SUBSCRIPTIONS=true
ENABLE_MAPS=true
ENABLE_ANALYTICS=true
